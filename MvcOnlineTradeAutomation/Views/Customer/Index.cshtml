@model List<MvcOnlineTradeAutomation.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Customer List</h3>
        @Html.ActionLink("Add New Customer", "CreateCustomer", "Customer", null, new { @class = "btn btn-primary btn-sm" })
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="thead-dark">
                        <tr class="text-nowrap">
                            <th style="width:100px;">ID</th>
                            <th>First</th>
                            <th>Last</th>
                            <th>City</th>
                            <th>Email</th>
                            <th class="text-center" style="width:210px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CustomerID</td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.City</td>
                                <td class="text-truncate" style="max-width:280px;">@item.Email</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                                        <a href="@Url.Action("SalesHistory","Customer", new { id = item.CustomerID })" class="btn btn-info">
                                            <i class="fas fa-info-circle"></i> Sales History
                                        </a>
                                        <a href="@Url.Action("UpdateCustomer","Customer", new { id = item.CustomerID })" class="btn btn-warning">
                                            <i class="fas fa-edit"></i> Update
                                        </a>
                                        <a href="@Url.Action("DeleteCustomer","Customer", new { id = item.CustomerID })"
                                           class="btn btn-danger"
                                           onclick="return confirm('Delete this customer?');">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
