@model List<MvcOnlineTradeAutomation.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Employee List</h2>

    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width:90px;">ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Department</th>
                <th style="width:90px;">Image</th>
                <th style="width:220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmployeeID</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@(item.Department != null ? item.Department.DepartmentName : "-")</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="@($"{item.FirstName} {item.LastName}")"
                                 style="width:56px;height:56px;object-fit:cover;border-radius:8px;" />
                        }
                        else
                        { <span class="text-muted">No image</span>}
                    </td>
                    <td>
                        <a href="@Url.Action("Details", "Employee", new { id = item.EmployeeID })"
                           class="btn btn-sm btn-info me-1">Details</a>
                        <a href="@Url.Action("UpdateEmployee", "Employee", new { id = item.EmployeeID })"
                           class="btn btn-sm btn-warning">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("CreateEmployee", "Employee")" class="btn btn-primary">Add New Employee</a>
</div>
