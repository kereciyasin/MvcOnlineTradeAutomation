@model MvcOnlineTradeAutomation.Models.Category
@{
    ViewBag.Title = "Update Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Update Category</h2>
    <hr />

    @using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.CategoryID)

        <div class="form-group mb-3">
            @Html.LabelFor(x => x.CategoryName, "Category Name", new { @class = "form-label" })
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Enter category name" })
        </div>

        <button type="submit" class="btn btn-warning">Update</button>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ms-2" })
    }
</div>
