@model MvcOnlineTradeAutomation.Models.Category
@{
    ViewBag.Title = "Create Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Create Category</h2>

    <form method="post" action="@Url.Action("CreateCategory","Category")">
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.CategoryName, "Category Name", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", placeholder = "Enter category name" })
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
    </form>
</div>
